<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/CardImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_circular"
        android:layout_gravity="center_vertical"
        app:cardCornerRadius="@dimen/_50sdp"
        android:backgroundTint="@color/white"
        android:layout_alignBottom="@id/receivedTxt"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/MessageRecieveUserPic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/test1" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/nameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:text="Name"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/receivedTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/rounded_image_corners"
        android:backgroundTint="@color/ForgetPasswordBlueColor"
        android:padding="8dp"
        android:layout_below="@id/nameTxt"
        android:text="Hello this is a sample text"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</RelativeLayout>