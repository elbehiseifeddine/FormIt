<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_Course_Discussion"
    android:layout_marginTop="@dimen/_7sdp"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_4sdp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/CourseDiscussionPic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/formit_logo_v2"
                    app:layout_editor_absoluteX="16dp"
                    app:layout_editor_absoluteY="27dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingRight="@dimen/_5sdp"
            android:weightSum="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_Notification_Object"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android Course"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/textColor"
                    android:textSize="24sp"
                    android:textAlignment="textStart"
                    android:layout_weight="1"/>

<!--                <TextView-->
<!--                    android:id="@+id/tv_Notification_Time"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="1 hour"-->
<!--                    android:fontFamily="@font/poppins_semibold"-->
<!--                    android:textStyle="normal"-->
<!--                    android:textSize="@dimen/_9sdp"-->
<!--                    android:textColor="@color/grey"-->
<!--                    android:layout_weight="1"-->
<!--                    android:textAlignment="textEnd"/>-->
            </LinearLayout>



                <TextView
                    android:id="@+id/tv_Notification_Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome all of you ..."
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textAlignment="textStart"
                    android:layout_weight="2"/>



        </LinearLayout>



    </LinearLayout>
    <View
        android:id="@+id/SeparatorCourseDiscussion"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgrey"/>
</LinearLayout>