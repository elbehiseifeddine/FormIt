<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_Coache_Discussion"
    android:layout_marginTop="@dimen/_7sdp"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_4sdp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/CoacheDiscussionPic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/welcome_pic"
                    app:layout_editor_absoluteX="16dp"
                    app:layout_editor_absoluteY="27dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingEnd="@dimen/_5sdp"
android:weightSum="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:layout_weight="1"
                android:weightSum="2">

                <TextView
                    android:id="@+id/CoacheDiscussionName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android Course"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/CoacheDiscussionTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 hour"
                    android:fontFamily="@font/poppins_semibold"
                    android:textStyle="normal"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/grey"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:layout_weight="1"
                android:weightSum="3">

                <TextView
                    android:id="@+id/CoacheDiscussionLastMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome all of you ..."
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/grey"
                    android:textAlignment="textStart"
                    android:layout_weight="2"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/image53"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:elevation="2dp"
                    android:background="@drawable/btn_circular"
                    android:backgroundTint="@color/red"
                    app:cardCornerRadius="40dp">

                    <TextView
                        android:id="@+id/CoacheDiscussionUnreaded"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="9"
                        android:gravity="center"
                        android:layout_gravity="center|top"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>


                </androidx.cardview.widget.CardView>
            </LinearLayout>
           <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:orientation="horizontal"
                android:weightSum="2">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/image5"
                    android:layout_weight="1"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_circular"
                    android:backgroundTint="@color/red"
                    app:cardCornerRadius="40dp">

                    <TextView
                        android:id="@+id/CoacheDiscussionUnreaded"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="9"
